<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:orientation="vertical" android:layout_width="fill_parent"
	android:layout_height="fill_parent" android:id="@+id/linearLayout1">
	<LinearLayout android:layout_below="@+id/linearLayout1"
		android:layout_width="fill_parent" android:layout_height="wrap_content"
		android:orientation="horizontal" android:id="@+id/linearLayout2">
		<EditText android:layout_width="fill_parent" android:id="@+id/cityEditText"
			android:layout_height="wrap_content" android:layout_weight="1"
			android:layout_alignParentTop="true" />
		<Button android:text="@string/add" android:id="@+id/submitBtn"
			android:layout_width="fill_parent" android:layout_height="wrap_content"
			android:layout_weight="2" android:layout_alignParentTop="true" />
	</LinearLayout>
	<ListView android:layout_width="fill_parent" android:id="@android:id/list"
		android:layout_height="fill_parent" android:layout_below="@+id/linearLayout2"></ListView>
</RelativeLayout>
